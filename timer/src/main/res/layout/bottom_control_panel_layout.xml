<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/modal_card"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_control_panel_height"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/project_action"
            android:tint="@color/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/bottom_panel_margin"
            app:srcCompat="@drawable/ic_project" />

        <ImageView
            android:id="@+id/tag_action"
            android:tint="@color/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/bottom_panel_margin"
            app:srcCompat="@drawable/ic_tag" />

        <ImageView
            android:id="@+id/timer_action"
            android:tint="@color/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/bottom_panel_margin"
            app:srcCompat="@drawable/ic_timer" />

        <ImageView
            android:id="@+id/billable_action"
            android:tint="@color/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circular_background"
            android:layout_margin="@dimen/bottom_panel_margin"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_billable" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/done_action"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/grid_1"
            android:layout_margin="@dimen/bottom_panel_margin"
            android:tint="@color/design_default_color_on_secondary"
            android:foreground="?selectableItemBackgroundBorderless"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/secondary"
            app:srcCompat="@drawable/ic_check" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>