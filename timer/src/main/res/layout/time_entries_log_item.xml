<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/log_item"
    android:layout_height="@dimen/time_entry_log_item_height"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent">
    <TextView
        android:id="@+id/backgroundContinue"
        tools:visibility="invisible"
        android:textSize="@dimen/swipe_action_font_size"
        android:typeface="normal"
        android:paddingStart="@dimen/swipe_action_text_padding"
        android:paddingEnd="@dimen/swipe_action_text_padding"
        android:visibility="invisible"
        tools:text="Continue"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical|start"
        android:textColor="@android:color/white"
        android:background="@color/startTimeEntryButtonBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/backgroundDelete"
        tools:visibility="@dimen/swipe_action_font_size"
        android:textSize="15sp"
        android:paddingStart="@dimen/swipe_action_text_padding"
        android:paddingEnd="@dimen/swipe_action_text_padding"
        android:typeface="normal"
        tools:text="Delete"
        android:visibility="invisible"
        android:gravity="center_vertical|end"
        android:fontFamily="sans-serif-medium"
        android:textColor="@android:color/white"
        android:background="@color/stopTimeEntryButtonBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentView"
        android:elevation="1dp"
        android:background="@color/surface"
        android:layout_height="@dimen/time_entry_log_item_height"
        android:layout_width="match_parent">
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/topGuideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp"
            android:layout_width="wrap_content" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/bottomGuideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/description"
            tools:visibility="visible"
            android:maxLines="1"
            android:textSize="15sp"
            android:gravity="start"
            android:textColor="@color/textOnSurface"
            tools:text="Exporting assets to Zeplin and organizing"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/topGuideline"
            app:layout_constraintBottom_toTopOf="@+id/addDescriptionLabel"
            app:layout_constraintEnd_toEndOf="@+id/durationGradient"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/time_entry_log_side_padding"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/addDescriptionLabel"
            tools:visibility="gone"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="15sp"
            tools:text="Add description"
            android:textColor="#fefefe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintBottom_toTopOf="@+id/projectLabel"
            app:layout_constraintEnd_toEndOf="@+id/durationGradient"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/time_entry_log_side_padding"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/archivedIcon"
            android:src="@drawable/ic_archived"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/projectLabel"
            app:layout_constraintTop_toTopOf="@+id/projectLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/time_entry_log_side_padding"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="12dp" />
        <TextView
            android:id="@+id/projectLabel"
            tools:text="Design"
            android:gravity="start"
            tools:textColor="#c56bff"
            android:visibility="gone"
            android:maxLines="1"
            android:textSize="15sp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintBottom_toBottomOf="@id/bottomGuideline"
            app:layout_constraintTop_toBottomOf="@id/addDescriptionLabel"
            app:layout_constraintStart_toEndOf="@id/archivedIcon"
            app:layout_constraintEnd_toEndOf="@+id/durationGradient"
            app:layout_goneMarginStart="@dimen/time_entry_log_side_padding"
            android:layout_marginStart="4dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/durationPaddingArea"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="0dp"
            android:layout_width="72dp" />
        <View
            android:id="@+id/durationGradient"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/gradient_transparent_to_surface"
            app:layout_constraintEnd_toStartOf="@id/durationPaddingArea"
            android:layout_height="0dp"
            android:layout_width="48dp" />
        <TextView
            android:id="@+id/duration"
            tools:text="0:23:01"
            android:maxLines="1"
            android:gravity="end"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="@color/textOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintBottom_toTopOf="@+id/continueIcon"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />
        <ImageView
            android:id="@+id/billableIcon"
            android:src="@drawable/ic_billable"
            android:tint="@color/icon"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/duration"
            app:layout_constraintEnd_toStartOf="@id/duration"
            app:layout_constraintBottom_toBottomOf="@id/duration"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="4dp" />
        <ImageView
            android:id="@+id/TimeEntriesLogCellTags"
            android:src="@drawable/ic_tag"
            android:visibility="gone"
            android:tint="@color/icon"
            app:layout_constraintTop_toTopOf="@id/duration"
            app:layout_constraintEnd_toStartOf="@id/billableIcon"
            app:layout_constraintBottom_toBottomOf="@id/duration"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="4dp" />
        <ImageView
            android:id="@+id/continueIcon"
            android:src="@drawable/ic_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/errorIcon"
            app:layout_constraintTop_toBottomOf="@id/duration"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp" />
        <ImageView
            android:id="@+id/errorIcon"
            tools:visibility="gone"
            android:visibility="gone"
            android:src="@drawable/ic_unsyncable"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/continueIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp" />
        <ImageView
            android:id="@+id/needsSyncIcon"
            android:src="@drawable/ic_unsynced"
            app:layout_constraintTop_toTopOf="@id/continueIcon"
            app:layout_constraintEnd_toStartOf="@id/continueIcon"
            android:layout_width="24dp"
            android:visibility="gone"
            android:layout_height="24dp"
            android:layout_marginEnd="2dp" />
        <View
            android:id="@+id/continueButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@android:color/transparent"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
